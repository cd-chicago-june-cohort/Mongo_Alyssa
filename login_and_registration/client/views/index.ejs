<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>html{margin: 10px;}</style>
    <title>Login and Registration</title>
</head>
<body>
    <div class="row">
        <div class="col-md-12">
        <h1>Registration</h1>
            <form action="/register" method="post">
                <div class="form-group">
                    <label for'first_name'>First Name:</label>
                    <input type="text" name="first_name">
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['first_name']) { %>
                            </br><em><%= errors['first_name'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for'last_name'>Last Name:</label>
                    <input type="text" name="last_name">
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['last_name']) { %>
                            </br><em><%= errors['last_name'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for'email'>Email:</label>
                    <input type="text" name="email">
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['email']) { %>
                            </br><em><%= errors['email'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for'password'>Password:</label>
                    <input type="password" name="password">
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['password']) { %>
                            </br><em><%= errors['password'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for'confirm'>Confirm pw:</label>
                    <input type="password" name="confirm">
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['confirm']) { %>
                            </br><em><%= errors['confirm'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for'birthday'>Birthday:</label>
                    <input type="date" name="birthday">
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['birthday']) { %>
                            </br><em><%= errors['birthday'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <input type="submit" value="Register">
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        <h1>Login</h1>
            <form action="/authenticate" method="post">
                <div class="form-group">
                    <label for'email'>Email</label>
                    <input type="text" name="email">
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['login_email']) { %>
                            </br><em><%= errors['login_email'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for 'password'>Password</label>
                    <input type='password' name='password'><br/>
                    <% if (typeof errors != 'undefined') {%>
                        <% if (errors['login_password']) { %>
                            </br><em><%= errors['login_password'].message %></em>
                        <% } %>
                    <% } %>
                </div>
                <input type="submit" value="Login">
            </form>
        </div>
    </div>
</body>
</html>